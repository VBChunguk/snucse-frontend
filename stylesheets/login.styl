@import "mixin.styl"
@import "variable.styl"
#login-background
  min-height 100vh
  background header-color
#login-box-container
  position absolute
  width 500px
  height 340px
  top 0
  bottom 0
  left 0
  right 0
  margin auto
#login-box-title
  font-size 80px
  line-height 30px
  font-weight 900
  font-family 'Nanum Gothic'
  color background-color
  margin-bottom 10px
#login-box
  background-color background-color
  width 500px
  height 300px
  padding 15px
#login-box-header
  text-align center
  font-size 18px
  padding-bottom 15px
  border-bottom 1px solid box-border-color
#login-form
  height 180px
  padding-top 50px
#login-input-container
  width 360px
  float left
.login-form-group
  margin-bottom 15px
.login-form-label
  width 100px
  padding 3px 15px 0
  text-align right
  display inline-block
  font-weight 700
  vertical-align top
.login-form-input-container
  width 240px
  display inline-block
.login-form-input
  font-size 14px
  line-height 1.6
  padding 6px 12px
  width 100%
  height 28px
  color input-text-color
  vertical-align middle
  border 1px solid box-border-color
#login-button-container
  width 110px
  float left
  padding-left 10px
#login-button
  background header-color-2
  border 1px solid box-border-color
  color background-color
  width 70px
  height 71px
  border-radius 4px
  font-size 14px
#login-box-footer
  border-top 1px solid box-border-color
  padding-top 15px
  text-align center
  font-size 16px
.login-box-footer-link
  color text-color
#signup-box-container
  position absolute
  width 700px
  height 510px
  top 0
  bottom 0
  left 0
  right 0
  margin auto
#signup-box-title
  font-size 28px
  line-height 30px
  font-weight 400
  color background-color
  margin-bottom 10px
#signup-box
  background-color background-color
  width 700px
  height 470px
  padding 15px
#signup-box-header
  margin-bottom 15px
  padding-bottom 15px
  border-bottom 1px solid box-border-color
.signup-form-group
  margin-bottom 10px
.signup-form-label
  width 200px
  padding 3px 15px 0
  text-align right
  display inline-block
  font-weight 700
  vertical-align top
.signup-form-input
  font-size 14px
  line-height 1.6
  padding 6px 12px
  width 400px
  height 28px
  color input-text-color
  vertical-align middle
  border 1px solid box-border-color
#signup-button-container
  padding-top 10px
  text-align center
#signup-button
  background header-color-2
  border 1px solid header-color-1
  color background-color
  width 80px
  height 30px
  border-radius 4px
  font-size 14px
@media (max-width: 768px)
  #login-background
    position static
  #login-box-container
    width 100%
    height 350px
    padding 10px
  #login-box
    width 100%
    height 270px
  #login-form
    height 150px
    padding-top 20px
  #login-input-container
    float none
    width auto
  .login-form-label
    display table-cell
    min-width 100px
  .login-form-input-container
    display table-cell
    width 10000px
  #login-button-container
    float none
    width auto
    text-align center
  #login-button
    height 30px
  #signup-box-container
    position static
    width 100%
    height auto
    padding 10px
  #signup-box
    width 100%
    height auto
  .signup-form-label
    width 100%
    text-align left
    padding 0
    padding-bottom 7px
  .signup-form-input
    width 100%
